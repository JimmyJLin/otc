<% layout('main') -%>
<div id="page_title">
  <h1>Register</h1>
</div>

<div id="register">
  <div class="container">


    <form action="/post/register" method="POST" class="form-horizontal">
      <div class="form-group">
        <label for="fname" class="col-sm-2 control-label">First Name: </label>
        <div class="col-sm-10">
          <input type="text" name="fname" class="form-control" placeholder="First Name">
        </div>
      </div>
      <div class="form-group">
        <label for="lname" class="col-sm-2 control-label">Last Name: </label>
        <div class="col-sm-10">
          <input type="text" name="lname" class="form-control" placeholder="Last Name">
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email: </label>
        <div class="col-sm-10">
          <input type="text" name="email" class="form-control" placeholder="user@gmail.com">
        </div>
      </div>
      <div class="form-group">
        <label for="telephone" class="col-sm-2 control-label">Telephone: </label>
        <div class="col-sm-10">
          <input type="text" name="telephone" class="form-control" placeholder="123-456-7890">
        </div>
      </div>

      <div id="checkbox" class="form-group center-block">
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="hairStrokes" value="hairStrokes">
            3 Days Hair Strokes Seminar
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="powdered" value="powdered">
            Powdered Seminar
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="lips" value="lips">
            Lips Seminar
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="eyeliners" value="eyeliners">
            Eyeliners Seminar
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="hairlines" value="hairlines">
            Hairlines Seminar
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="microbladeIntro" value="microbladeIntro">
            One Day Microblading Intro
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="fiveDaysSeminar" value="fiveDaysSeminar">
            Five Days Microblading Seminar
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="advancedMicroblading" value="advancedMicroblading">
            Advanced Microblading
          </label>
        </div>
        <div class="checkbox-inline">
          <label>
            <input type="checkbox" name="oneOnOne" value="oneOnOne">
            One on One Training
          </label>
        </div>
      </div>

      <div class="form-group">
        <label for="telephone" class="col-sm-2 control-label">How did you hear about us? </label>
        <div class="col-sm-10">
          <textarea rows="1" name="hearAboutUs" class="form-control" placeholder=""></textarea>
        </div>
      </div>

      <div class="form-group">
        <label for="telephone" class="col-sm-2 control-label">Questions or Comments</label>
        <div class="col-sm-10">
          <textarea rows="3" name="comments" class="form-control" placeholder=""></textarea>
        </div>
      </div>

      <br>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Submit" class="btn btn-primary btn-md">
        </div>
      </div>
    </form>


  </div>
</div>
